{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VocabularyFillersEntityWrapper",
  "type": "object",
  "required": ["entries"],
  "properties": {
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["language", "translation_language", "word", "frequency_level", "meanings", "repeated_count"],
        "properties": {
          "language": {
            "type": "string",
            "minLength": 1
          },
          "translation_language": {
            "type": "string",
            "minLength": 1
          },
          "word": {
            "type": "string",
            "minLength": 1
          },
          "frequency_level": {
            "type": "string",
            "enum": ["A1", "A2", "B1", "B2", "C1", "C2"]
          },
          "repeated_count": {
            "type": "integer",
            "minimum": 0
          },
          "meanings": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["part_of_speech", "translation", "meaning", "synonyms"],
              "properties": {
                "part_of_speech": {
                  "type": "string",
                  "enum": ["noun", "pronoun", "verb", "adjective", "adverb", "preposition", "conjunction", "interjection", "article", "numeral", "particle", "determiner"]
                },
                "translation": {
                  "type": "string",
                  "minLength": 1
                },
                "meaning": {
                  "type": "string",
                  "minLength": 1
                },
                "synonyms": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1
                  },
                  "minItems": 0
                }
              }
            }
          }
        }
      }
    }
  }
}
