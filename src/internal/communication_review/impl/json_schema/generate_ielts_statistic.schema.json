{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "suggestion": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "conclusion": {
      "type": "string"
    },
    "user_ielts_mark": {
      "type": "number",
      "minimum": 0,
      "maximum": 9
    },
    "band_breakdown": {
      "type": "object",
      "properties": {
        "fluency": {
          "type": "number",
          "minimum": 0,
          "maximum": 9
        },
        "lexical": {
          "type": "number",
          "minimum": 0,
          "maximum": 9
        },
        "grammar": {
          "type": "number",
          "minimum": 0,
          "maximum": 9
        }
      },
      "required": ["fluency", "lexical", "grammar"]
    },
    "part1": {
      "type": "object",
      "properties": {
        "summary": { "type": "string" },
        "highlights": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["summary"]
    },
    "part2": {
      "type": "object",
      "properties": {
        "summary": { "type": "string" },
        "highlights": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["summary"]
    },
    "part3": {
      "type": "object",
      "properties": {
        "summary": { "type": "string" },
        "highlights": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["summary"]
    }
  },
  "required": ["suggestion", "conclusion", "user_ielts_mark", "band_breakdown", "part1", "part2", "part3"]
}
