{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ISimulationDialogResponse",
  "type": "object",
  "required": ["dialogue_preview", "grammar_topics_ids", "vocabulary_highlight"],
  "properties": {
    "dialogue_preview": {
      "type": "object",
      "required": ["id", "original", "translation", "ai_role_name"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "original": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["role", "text"],
            "properties": {
              "role": {
                "type": "string",
                "enum": ["AI", "USER"]
              },
              "text": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        },
        "translation": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["role", "text"],
            "properties": {
              "role": {
                "type": "string",
                "enum": ["AI", "USER"]
              },
              "text": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        },
        "audio_url": {
          "type": ["string", "null"]
        },
        "ai_role_name": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "grammar_topics_ids": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },
    "vocabulary_highlight": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["word", "translation", "meaning"],
        "properties": {
          "word": { "type": "string", "minLength": 1 },
          "translation": { "type": "string", "minLength": 1 },
          "meaning": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
