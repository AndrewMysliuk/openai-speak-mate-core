{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "suggestion": {
      "type": "array",
      "description": "Actionable advice for the user based on their session performance. Each item should be a clear, helpful tip in the user's native language.",
      "items": {
        "type": "string"
      }
    },
    "conclusion": {
      "type": "string",
      "description": "High-level summary of how the user performed overall."
    },
    "user_cefr_level": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["A1", "A2", "B1", "B2", "C1", "C2"]
        },
        "reasons": {
          "type": "string"
        }
      },
      "required": ["level", "reasons"]
    },
    "goals_coverage": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "goal": {
            "type": "string"
          },
          "is_covered": {
            "type": "boolean"
          },
          "evidence": {
            "type": "string"
          }
        },
        "required": ["goal", "is_covered"]
      }
    },
    "vocabulary_used": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "word": {
            "type": "string"
          },
          "is_used": {
            "type": "boolean"
          },
          "usage_context": {
            "type": "string"
          }
        },
        "required": ["word", "is_used"]
      }
    },
    "phrases_used": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "phrase": {
            "type": "string"
          },
          "is_used": {
            "type": "boolean"
          },
          "usage_context": {
            "type": "string"
          }
        },
        "required": ["phrase", "is_used"]
      }
    }
  },
  "required": ["suggestion", "conclusion", "user_cefr_level", "goals_coverage", "vocabulary_used", "phrases_used"]
}
